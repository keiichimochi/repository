# Cloudflare - Get these from your Cloudflare dashboard
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token
CLOUDFLARE_ZONE_ID=your_zone_id

# R2 Storage - Create these in Cloudflare R2 settings
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=repository-storage

# D1 Database - Created using wrangler d1 create
D1_DATABASE_NAME=repository-db
D1_DATABASE_ID=your_database_id

# OpenAI API - Get this from OpenAI dashboard
OPENAI_API_KEY=your_openai_api_key

# Application
NODE_ENV=development
APP_SECRET=your_app_secret # Generate a random string for this
